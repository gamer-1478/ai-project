<div>
    <div class="landing-class">
        <div class="signup">
            <h1>Sign Up to Revolutionize News</h1>
            <div class="signup-form">
                <div class="field">
                    <label for="email">Email</label>
                    <input type="text" id="email" name="email" placeholder="Ashok.Kumar@gmail.com" />
                </div>
                <br> <br>
                <input id="registerbutt" type="button" value="proceed" onclick="Submit1()" class="signup-button" />
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.css">

<script src="https://cdn.jsdelivr.net/npm/notyf@3/notyf.min.js"></script>

<script>
    const notyf = new Notyf();
    async function Submit1() {
        document.getElementById("registerbutt").disabled = true;
        console.log("here");
        var email = document.getElementById("email").value;

        await fetch("/register", {
            method: "POST",
            headers: {
                "Content-Type": "application/json",
            },
            body: JSON.stringify({
                email: email
            }),
        }).then(async (response) => {
            var res = await response.json();
            if (res.success) {
                await notyf.success(
                    "You have been successfully registered!"
                );
                setTimeout(function () {
                    window.location.href = "/";
                }, 1000);
            } else {
                await notyf.error(res.message);
            }
        });
    }
</script>

